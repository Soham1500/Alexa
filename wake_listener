import pvporcupine
import sounddevice as sd
import struct
import subprocess
import os

def detected():
    print("ğŸ”Š Wake word 'Alexa' detected!")
    subprocess.call(["python3", "alexa.py"])

porcupine = pvporcupine.create(keywords=["alexa"])
sampling_rate = porcupine.sample_rate
frame_length = porcupine.frame_length

def audio_callback(indata, frames, time, status):
    if status:
        print(status)
    pcm = struct.unpack_from("h" * frame_length, indata)
    result = porcupine.process(pcm)
    if result >= 0:
        detected()

print("ğŸ™ï¸ Listening for 'Alexa'... (Press Ctrl+C to stop)")
try:
    with sd.InputStream(channels=1, samplerate=sampling_rate, blocksize=frame_length, dtype='int16', callback=audio_callback):
        while True:
            pass
except KeyboardInterrupt:
    print("\nâŒ Stopped wake listener.")
except Exception as e:
    print("â— Error:", str(e))
finally:
    if porcupine:
        porcupine.delete()
